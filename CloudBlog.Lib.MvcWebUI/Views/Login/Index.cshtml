@model CloudBlog.Lib.MvcWebUI.Models.UserForLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico">

    <!-- FontAwesome JS-->
    <script defer src="~/fontawesome/js/all.min.js"></script>

    <!-- Theme CSS -->
    <link id="theme-style" rel="stylesheet" href="~/css/theme-1.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Login</title>

    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #141414;
        }

        input[type=text], input[type=password] {
            width: 30%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
            text-align: center;
        }

        .container {
            padding: 16px;
        }

        button {
            width: 30%;
        }

        form {
            padding-top:30px;
        }
    </style>
</head>
<body>
    <center>
        <form asp-action="Index" asp-controller="Login">
            <img src="~/images/lock.png" alt="Admin" width="200" height="200">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <input type="text" asp-for="Username" class="form-control" placeholder="Username">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-primary" type="submit">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </center>
</body>
</html>
