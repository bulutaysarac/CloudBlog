<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bulutay's Personel Blog</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico">

    <!-- FontAwesome JS-->
    <script defer src="~/fontawesome/js/all.min.js"></script>

    <!-- Theme CSS -->
    <link id="theme-style" rel="stylesheet" href="~/css/theme-1.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

</head>

<body>
    <header class="header text-center">
        <h1 class="blog-name pt-lg-4 mb-0">Admin Panel</h1>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navigation" class="collapse navbar-collapse flex-column">
                <ul class="navbar-nav flex-column text-left">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home fa-fw mr-2"></i>
                            Blog
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="ListArticles">
                            <i class="fas fa-list fa-fw mr-2"></i>
                            Makale Listele
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="AddArticle">
                            <i class="fas fa-plus fa-fw mr-2"></i>
                            Makale Ekle
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="Login" asp-action="LogOut">
                            <i class="fas fa-power-off fa-fw mr-2"></i>
                            Çıkış Yap
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="main-wrapper">
        @RenderBody()

        <footer class="footer text-center py-2 theme-bg-dark">
            <a href="#">Bulutay Saraç - 2021</a>
        </footer>
    </div>

    <script src="~/plugins/jquery-3.4.1.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/plugins/popper.min.js"></script>
    <script src="~/js/demo/style-switcher.js"></script>
    <script src="~/js/sweetalert.min.js"></script>

    @RenderSection("ArticleScripts", false)
</body>
</html>